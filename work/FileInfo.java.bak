import java.io.*;

public class FileInfo{

	public static void main(String[] args){

		System.out.println("파일 이름을 넣으세요");

		String name="";

		try{
			BufferedReader in=
				new BufferedReader(new InputStreamReader(System.in));
			name=in.readLine();
		}catch(Exception e){
			e.printStackTrace();
		}

		File file=new File(name);

		if(file.exists()){
			System.out.println("파일이름: "+file.getName());
			System.out.println("파일이름: "+file.getPath());
			System.out.println("파일이름: "+file.getAbsolutePath());
			System.out.println("파일이름: "+file.canWrite());
			System.out.println("파일이름: "+file.canRead());
			System.out.println("파일이름: "+file.length());

		}else{
						System.out.println("해당 파일은 존재하지 않습니다");
		}
	}
}
