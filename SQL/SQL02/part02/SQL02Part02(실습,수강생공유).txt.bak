FROM emp_test; 



//==> 이름,연봉을 \999,999.99형식으로  출력
SELECT 
name 이름 , TO_CHAR( NVL(salary,0)*12 , 'L999,999.99' ) 연봉
FROM emp_test
ORDER BY NVL(salary,0)  DESC;

