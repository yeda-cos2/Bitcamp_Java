//==> sal_grade TABLE 생성
CREATE TABLE sal_grade(
	grade	CHAR(1)	CONSTRAINT salgrade_grade_nn	NOT NULL,
	losal	NUMBER(4)	CONSTRAINT salgrade_losal_uq	UNIQUE,
	hisal	NUMBER(4)	CONSTRAINT salgrade_hisal_uq	UNIQUE
);


