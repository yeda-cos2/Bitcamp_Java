package prob_0228;
import java.io.*;
import java.util.Vector;
public class FileController {

	public void reverseLine(String oldf, String newf) throws Exception{
		String[] arr = new String[4];
		String line = "";
		
		Vector<String> v = new Vector<String>();
		FileReader fr = new FileReader(oldf);
		BufferedReader br_f = new BufferedReader(fr);
		BufferedWriter bw = new BufferedWriter(new FileWriter(newf));

		
			for( int i = 0 ; (line = br_f.readLine()) != null ; i ++) {
				arr[i] = line;
			}
			for ( int i = arr.length-1 ; i >= 0 ; i --) {
				v.add(arr[i]);
			}
			for (int i = 0 ; i < v.size() ; i ++) {
				bw.write(v.elementAt(i));
				bw.newLine();
				}				
				System.out.println("####################");
				System.out.println("##파일이 생성되었습니다 ##");
				System.out.println("####################");
				bw.flush();
				bw.close();
				br_f.close();
			}
	
	
	
	public static void main(String[] args) {
		FileController c = new FileController();
		String oldf = "files/oldf.txt";
		String newf = "files/newf.txt";
	
		try {
			c.reverseLine(oldf, newf);
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}

}
