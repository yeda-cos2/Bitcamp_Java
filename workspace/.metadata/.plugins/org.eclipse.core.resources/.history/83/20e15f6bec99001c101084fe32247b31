package prob_0302;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileReader;
import java.io.FileWriter;
import java.util.ArrayList;
import java.util.List;

public class FileCalculator {

	public void addCalculateResult(String inputFileName) throws Exception {
		BufferedReader br = new BufferedReader(new FileReader(inputFileName));
		BufferedWriter bw = new BufferedWriter(new FileWriter(inputFileName,true));

		String str = null;
		List<String> m = new ArrayList<String>();

		while (true) {
			str = br.readLine();
			m.add(str);
			if (str != null) {
				break;
			}
		}
	
		int mul = 1;
		int sum = 0;
		for (int i = 0; i < m.size()-1; i++) {
			sum += Integer.parseInt(m.get(i));
			mul *= Integer.parseInt(m.get(i));
		}
		System.out.println(sum);
		System.out.println(mul);
//		bw.write(sum);
//		bw.write(mul);

		bw.flush();
		br.close();
		bw.close();
	}


	public static void main(String[] args) throws Exception {
		FileCalculator fc = new FileCalculator();
		try {
			fc.addCalculateResult("D:\\test.txt");
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
}
